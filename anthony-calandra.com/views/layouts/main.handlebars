<!doctype html>
<html>
  <head>
    <meta charset="utf8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{{siteTitle}}</title>
    <link rel="stylesheet" type="text/css" href="/css/screen.css" />
    <link href="//netdna.bootstrapcdn.com/font-awesome/4.1.0/css/font-awesome.min.css" rel="stylesheet" />
    <link href="//fonts.googleapis.com/css?family=Merriweather:900,900italic,300,300italic" rel="stylesheet" type="text/css">
  </head>
  <body>
    <div class="wrapper">
      <div id="nav-menu" class="center-text">
        <ul class="menu">
          <li><a href="/blog"><span class="fa fa-pencil navi-icon fa-4x"></span></a></li>
          <li><a href="http://github.com/AnthonyCalandra"><span class="fa fa-github navi-icon fa-4x"></span></a></li>
          <li><a href="http://stackoverflow.com/users/3229983/anthony-calandra"><span class="fa fa-stack-overflow navi-icon fa-4x"></span></a></li>
          <li><a href="/downloads/AnthonyCalandra_Resume.pdf"><span class="fa fa-paperclip navi-icon fa-4x"></span></a></li>
        </ul>
      </div>
      <main>
        {{{body}}}
      </main>
    </div>
    <footer>
      <span>
        {{#if loggedIn}}
          <a href="/logout?_csrf={{csrfToken}}" class="brand">Logout</a> - <a href="/blog/create" class="brand">Create Post</a>
          {{#if inPost}}
          - <a href="/blog/edit/{{postId}}" class="brand">Edit Post</a> - <a href="/blog/delete/{{postId}}" class="brand">Delete Post</a>
          {{/if}}
        {{else}}
          <a href="/login" class="brand">Login</a>
        {{/if}}
         - <a href="/blog" class="brand">Blog Index</a>
      </span>
    </footer>
    {{{footerHtml}}}
  </body>
</html>
