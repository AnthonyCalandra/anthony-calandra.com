<!doctype html>
<html>
  <head>
    <meta charset="utf8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{{siteTitle}}</title>
    <link rel="stylesheet" type="text/css" href="/css/screen.css" />
    <link href="//netdna.bootstrapcdn.com/font-awesome/4.1.0/css/font-awesome.min.css" rel="stylesheet" />
  </head>
  <body>
    <div id="home-panel">
      <main>
        <h1 class="no-underline">Welcome.</h1>
        <nav>
          <ul id="nav-list">
            <li><a href="/posts"><span data-label="Posts &amp; Articles" class="fa fa-pencil navi-icon fa-4x"></span></a></li>
            <li><a href="http://github.com/AnthonyCalandra"><span data-label="Github Profile" class="fa fa-github navi-icon fa-4x"></span></a></li>
            <li><a href="http://stackoverflow.com/users/3229983/anthony-calandra"><span data-label="Stack Overflow Profile" class="fa fa-stack-overflow navi-icon fa-4x"></span></a></li>
            <li><a href="/downloads/AnthonyCalandra_Resume.pdf"><span data-label="Resume" class="fa fa-paperclip navi-icon fa-4x"></span></a></li>
          </ul>
        </nav>
        <span id="nav-label"></span>
      </main>
    </div>
    {{{footerHtml}}}
    <script style="text/javascript">
      document.getElementById('nav-list').addEventListener('mouseover', function(e) {
        // Make sure the user is actually hovering over the anchor/icon.
        if (e.target && e.target.nodeName === 'SPAN') {
          document.getElementById('nav-label').textContent = e.target.dataset.label;
          document.getElementById('nav-label').style.opacity = '1';
        }
      });
      document.getElementById('nav-list').addEventListener('mouseout', function(e) {
        document.getElementById('nav-label').style.opacity = '0';
      });
    </script>
  </body>
</html>
